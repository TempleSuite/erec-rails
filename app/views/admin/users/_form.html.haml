= simple_form_for [:admin, @user] do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg
  = f.input :first_name
  = f.input :middle_name
  = f.input :last_name
  = f.input :description
  = f.input :rating
  = f.input :gender
  = f.input :email
  = f.input :born_at

  .actions
    = f.submit 'Save'
