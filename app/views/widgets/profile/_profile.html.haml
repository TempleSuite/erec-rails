%header
  = render partial: 'shared/edit_button', locals: { title: 'profile-header' }
  %span.widget-icon
    %i.fa.fa-list-alt.txt-color-white
  %h2 Profile

%div(role="content")
  .widget-body.widget-hide-overflow.no-padding
    .widget-body.no-padding
      .panel-body.well
        %form.smart-form
          %fieldset
            .row
              .col-xs-12
                .responsive-box-lg.details(style="padding-right: 5px;")
                  = image_tag 'superbox/John Doe.jpg', alt: 'profile icon', class: 'icon-lg', id: 'photo'
                  = image_tag 'edit.png', class: 'edit-image hidden-xs', :'data-expands' => '#profile-edit-image'

                  %label.label
                    %strong= @user.full_name

                  %label.label
                    %strong Membership ID:
                    = @user.id

                  %label.label
                    %strong Verified Member

                  %label.label
                    %a(data-expands='profile-change-password' href='#') Change Password

                  = render partial: 'widgets/profile/profile/edit_image'
                  = render partial: 'widgets/profile/profile/change_password'

                  %br/

                  = render partial: 'shared/rating', locals: { rating: defined?(rating) ? rating : 3.0 }

                  %a(data-expands='#profile-enter-comments' href='#') Enter Comments
                  = render partial: ('widgets/profile/profile/enter_comments');

                .responsive-box-xl.lean-right(style='max-width: 400px;')
                  %label.textarea
                    %i.icon-prepend.fa.fa-comment
                    %textarea(rows=10 cols=40 name='class-desc' placeholder='I am a personal trainer at the Gary Todds Recreation Centre. &#10; &#10;I believe in nutrition planning and maintaining a balanced work out.')

            = render partial: 'shared/edit_row', locals: { title: 'profile-header' }
