<div class="row edit-image hidden-field-area" id="profile-edit-image" style="display: none;">
  <div class="col-xs-11">
    <div class="row">
      <div class="responsive-box-xl" style="margin-left:0px;">
        <form action="" class="smart-form">
          <fieldset>
            <section>
              <label for="file" class="input input-file">
                <div class="button"><input type="file" name="file" id="browse-image" >Browse</div>
                <input id="image-filename" type="text" placeholder="Include some files" readonly=""/>
              </label>
            </section>
          </fieldset>
        </form>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-4 pull-right">
        <button type='submit' class='btn btn-primary btn-sm upload-button' id='upload-image' data-unexpands="#profile-edit-image">Upload</button>
      </div>
    </div>
  </div>
</div>
